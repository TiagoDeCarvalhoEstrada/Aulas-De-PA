// Data atual  : 25/05/2023
Var
// Seção de Declarações das variáveis
result, nota1, nota2, nota3, nota4: real
nome: caractere
Inicio
// Seção de Comandos, procedimento, funções, operadores, etc...
escreval ("informe seu nome.")
leia (nome)
escreval ("informe sua nota do primeiro bimestre.")
leia (nota1)
escreval
escreval ("agora do segundo.")
leia (nota2)
escreval ("agora do terceiro")
leia (nota3)
escreval ("agora do quarto")
leia (nota4)
result <- nota1 + nota2 + nota3 + nota4
se result >= 28 entao
escreval ("aprovado")
senao
escreval ("reprovado")
fimse

Fimalgoritmo